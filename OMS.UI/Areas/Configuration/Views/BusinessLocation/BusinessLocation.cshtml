@model IEnumerable<OMS.UI.Areas.Configuration.ViewModels.BusinessLocationVM>;
@* <link href="~/matrica/assets/libs/mobius1-selectr/selectr.min.css" rel="stylesheet" type="text/css" /> *@

@section Styles{
	<!-- Syncfusion ASP.NET Core controls styles -->
	<link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/28.1.33/material.css" />

	<!-- Syncfusion ASP.NET Core controls styles -->
	<link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/28.1.33/fluent.css" />
	<style type="text/css">
	</style>
}
	<div class="modal fade" id="mdlBusinessLocationShow">
		<div class="modal-dialog modal-xl" id="PlaceHolderHere">
		</div>
	</div>

<div class="row">
	<div class="col-12 col-lg-12">

		<div class="card" style="">

			<div class="card-header">
				<div class="row align-items-center">
					<div class="col">
						<h4 class="card-title">BusinessLocation Index</h4>
					</div><!--end col-->
					<div class="col-auto">
						<button type="button" class="btn btn-de-primary" data-toggle="ajax-modal"
								data-target="#mdlBusinessLocationShow" data-url="@Url.Action("Create")">
							<i class="fas fa-plus me-2"></i>Add BusinessLocation
						</button>
					</div><!--end col-->
				</div>  <!--end row-->
			</div><!--end card-header-->

			<div class="card-body">
				<div class="table-responsive">
					<ejs-grid id="Grid" dataSource="@Model" allowPaging="true" allowSorting="true" allowFiltering="true" allowGrouping="true">
						<e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
						<e-grid-columns>
							<e-grid-column field="Address1" headerText="Order ID" textAlign="Right" width="120"></e-grid-column>
							<e-grid-column field="Address2" headerText="Customer ID" width="150"></e-grid-column>
							<e-grid-column field="CountryName" headerText="Order Date" width="130" textAlign="Right" format="yMd"></e-grid-column>
							<e-grid-column field="StateName" headerText="Ship Country" width="120"></e-grid-column>
						</e-grid-columns>
					</ejs-grid>
					<ejs-multiselect id="CountryId" dataSource="@ViewBag.CountryList" placeholder="Favorite Sports"
									 mode="CheckBox" enableSelectionOrder="false">
						<e-multiselect-fields value="Id" text="Name"></e-multiselect-fields>
					</ejs-multiselect>
					<table class="table mb-0">
						<thead class="thead-light">
							<tr>
								<th class="d-none">@Html.DisplayNameFor(m => m.Id)</th>
								<th>CompanyId</th>
								<th>Name</th>
								<th>Address1</th>
								<th>Address2</th>
								<th>Country</th>
								<th>State</th>
								<th>City</th>
								<th>ZipCode</th>
								<th>TaxName</th>
								<th>TaxNumber</th>
								<th>Latitude</th>
								<th>Longitude</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>

									<td class="d-none">@Html.DisplayFor(modelItem => item.Id)</td>
									<td>@item.CompanyId</td>
									<td>@item.Name</td>
									<td>@item.Address1</td>
									<td>@item.Address2</td>
									<td>@item.CountryName</td>
									<td>@item.StateName</td>
									<td>@item.CityName</td>
									<td>@item.ZipCode</td>
									<td>@item.TaxName</td>
									<td>@item.TaxNumber</td>
									<td>@item.Latitude</td>
									 <td>@item.Longitude</td> 
									@* <td><ejs-calendar id="calendar"></ejs-calendar></td> *@
									<td>
										<button type="button" class="btn btn-de-primary" data-toggle="ajax-modal"
												data-target="#mdlBusinessLocationShow" data-url="@Url.Action($"Edit/{item.Id}")">
											<i class="las la-pen text-secondary font-16"></i>
										</button>
										<button type="button" class="btn btn-de-primary" data-toggle="ajax-modal"
												data-target="#mdlBusinessLocationShow" data-url="@Url.Action($"Delete/{item.Id}")">
											<i class="las la-trash-alt text-secondary font-16"></i>
										</button>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script type="text/javascript">
		$(window).on('load', function() {
		 // $('#mdlBusinessLocationShow').modal('show');
		 $('#mdlBusinessLocationShow').modal({backdrop: 'static', keyboard: false});
		});
	</script>
<script src="~/matrica/assets/js/pages/app-custom.js" type="text/javascript"></script>
	<script src="https://cdn.syncfusion.com/ej2/28.1.33/dist/ej2.min.js"></script>

}

