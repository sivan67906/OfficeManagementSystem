@model OMS.UI.Areas.Configuration.ViewModels.BusinessCategoryVM

<script type="text/javascript">
	 
</script>

<div class="modal fade" id="mdlBusinessCategoryShow">
	<div class="modal-dialog modal-xl">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title mt-0" id="">Create BusinessCategory Setup</h5>
			</div>
			<div class="modal-body">
				<form action="Create">
					<input id="txtId" type="hidden" name="Id" value="" />
					<div class="row mt-3">
						<div class="col-lg-4">Business Type <span class="text-danger">*</span></div>
						<div class="col-lg-4">Business Code <span class="text-danger">*</span></div>
						<div class="col-lg-4">Business Name <span class="text-danger">*</span></div>
					</div>
					<div class="row">
						
						<div class="col-lg-4">
							@Html.DropDownListFor(c => c.BusinessTypeId,
																new SelectList(ViewBag.BusinessTypeList, "Id", "Name"),
																"--", new
																{
																	@class = "form-control"
																,
																	onchange = ""
																})
						</div>
						<div class="col-lg-4">
							<input id="txtCode" type="text" class="form-control" name="Code" placeholder="enter Code" value="">
							<span asp-validation-for="Code" class="text-danger"></span>
						</div>
						<div class="col-lg-4">
							<input id="txtCode" type="text" class="form-control" name="Name" placeholder="enter Name" value="">
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
					</div>
					<div class="row mt-4 text-end ">
						<div class="col-lg-12 ">
							<button type="button" class="btn btn-sm btn-de-danger me-2" data-bs-dismiss="modal"><i class="mdi mdi-window-close me-2"></i>Close</button>
							<button type="button" class="btn btn-sm btn-de-primary" data-save="modal"><i class="mdi mdi-check-all me-2"></i>Create</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	<script type="text/javascript">
		$(window).on('load', function() {
		 $('#mdlBusinessCategoryShow').modal({backdrop: 'static', keyboard: false});
		});
	</script>
}