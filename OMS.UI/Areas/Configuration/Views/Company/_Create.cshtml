@model OMS.UI.Areas.Configuration.ViewModels.CompanyVM;
	<link href="~/matrica/assets/libs/vanillajs-datepicker/css/datepicker.min.css" rel="stylesheet" type="text/css" />

	<style type="text/css">
		/* .table td {
							padding: 10px 0 0 5px !important;
						} */
	</style>

		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title mt-0" id="">Company Setup</h5>
			</div>
			<div class="modal-body">
				<form action="Create">
					<div class="row mt-3">
						<div class="col-lg-4">Name <span class="text-danger">*</span></div>
						<div class="col-lg-4">Registration Number <span class="text-danger">*</span></div>
						<div class="col-lg-4">Email <span class="text-danger">*</span></div>
					</div>
					<div class="row">
						<div class="col-lg-4">
							<input id="txtName" type="text" class="form-control" name="Name" placeholder="enter Name" value="">
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
						<div class="col-lg-4">
							<input id="txtRegnNumber" type="text" class="form-control" name="RegnNumber" placeholder="enter RegnNumber" value="">
							<span asp-validation-for="RegnNumber" class="text-danger"></span>
						</div>
						<div class="col-lg-4">
							<input id="txtEmail" type="text" class="form-control" name="Email" placeholder="enter Email" value="">
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
					</div>
					<div class="row mt-3">
						<div class="col-lg-4">PhoneNumber <span class="text-danger">*</span></div>
						<div class="col-lg-4">Established Year <span class="text-danger">*</span></div>
						<div class="col-lg-4">Website <span class="text-danger">*</span></div>
					</div>

					<div class="row">
						<div class="col-lg-4">
							<input id="txtPhoneNumber" type="text" class="form-control" name="PhoneNumber" placeholder="enter PhoneNumber" value="">
							<span asp-validation-for="PhoneNumber" class="text-danger"></span>
						</div>
						<div class="col-lg-4">
							<input id="foo1" type="text" class="form-control" name="EstablishedYear" placeholder="enter EstablishedYear" value="">
							<span asp-validation-for="EstablishedYear" class="text-danger"></span>
						</div>
						<div class="col-lg-4">
							<input id="txtWebsite" type="text" class="form-control" name="Website" placeholder="enter Website" value="">
							<span asp-validation-for="Website" class="text-danger"></span>
						</div>
					</div>
					<div class="row mt-3">
						<div class="col-lg-4">BusinessType <span class="text-danger">*</span></div>
						<div class="col-lg-4">Category <span class="text-danger">*</span></div>
						<div class="col-lg-4">Description</div>
					</div>
					<div class="row">
						<div class="col-lg-4">
							@Html.DropDownListFor(c => c.BusinessTypeId, new SelectList(ViewBag.BusinessTypes, "Id", "Name"), "--", new { @class = "form-control" })
							@* <input id="txtBusinessTypeId" type="text" class="form-control" name="BusinessTypeId" placeholder="enter BusinessTypeId" value="">
							 <span asp-validation-for="BusinessTypeId" class="text-danger"></span> *@
						</div>
						<div class="col-lg-4">
							@Html.DropDownListFor(c => c.CategoryId, new SelectList(ViewBag.CategoryTypes, "Id", "Name"), "--", new { @class = "form-control" })
							@* <input id="txtCategoryId" type="text" class="form-control" name="CategoryId" placeholder="enter CategoryId" value="">
							 <span asp-validation-for="CategoryId" class="text-danger"></span> *@
						</div>
						<div class="col-lg-4">
							<textarea rows="5" id="txtDescription" class="form-control" name="Description" placeholder="enter Description">
							</textarea>
							@* <span asp-validation-for="Description" class="text-danger"></span> *@
						</div>
					</div>
					<div class="row mt-4 text-end ">
						<div class="col-lg-12 ">
							<button type="button" class="btn btn-sm btn-de-danger me-2" data-bs-dismiss="modal"><i class="mdi mdi-window-close me-2"></i>Close</button>
							<button type="button" class="btn btn-sm btn-de-primary" data-save="modal"><i class="mdi mdi-check-all me-2"></i>Create</button>
						</div>
					</div>
				</form>
			</div>
		</div>

	<script src="~/matrica/assets/libs/vanillajs-datepicker/js/datepicker-full.min.js"></script>
	<script src="~/matrica/assets/js/moment.js"></script>
	<script src="~/matrica/assets/js/pages/forms-advanced.js"></script>
	<script>
		$(window).on('load', function() {
		 $('#mdlCompanyShow').modal({backdrop: 'static', keyboard: false});
		});
	</script>
