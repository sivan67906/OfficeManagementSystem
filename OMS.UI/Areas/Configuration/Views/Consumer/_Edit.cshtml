@model OMS.UI.Areas.Configuration.ViewModels.ConsumerVM;
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title mt-0" id="">Consumer Setup</h5>
			</div>
			<div class="modal-body">
				<form action="Update">
					<input id="txtId" type="hidden" name="Id" value="@Model.Id" />
					<div class="row mt-3">
						<div class="col-lg-4">FirstName <span class="text-danger">*</span></div>
						<div class="col-lg-4">LastName <span class="text-danger">*</span></div>
						<div class="col-lg-4">Email <span class="text-danger">*</span></div>
					</div>
					<div class="row">
						<div class="col-lg-4">
							<input id="txtFirstName" type="text" class="form-control" name="FirstName" placeholder="enter FirstName" value="@Model.FirstName">
							<span asp-validation-for="FirstName" class="text-danger"></span>
						</div>
						<div class="col-lg-4">
							<input id="txtLastName" type="text" class="form-control" name="LastName" placeholder="enter LastName" value="@Model.LastName">
							<span asp-validation-for="LastName" class="text-danger"></span>
						</div>
						<div class="col-lg-4">
							<input id="txtEmail" type="text" class="form-control" name="Email" placeholder="enter Email" value="@Model.Email">
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
					</div>
					<div class="row mt-3">
						<div class="col-lg-4">Password <span class="text-danger">*</span></div>
						<div class="col-lg-4">PlanType <span class="text-danger">*</span></div>
						<div class="col-lg-4">PhoneNumber <span class="text-danger">*</span></div>
					</div>

					<div class="row">
						<div class="col-lg-4">
							<input class="form-control" name="Password" type="password" value="@Model.Password" id="txtPassword" placeholder="enter Password">
							<i class="toggle-password fa fa-fw fa-eye-slash"></i>
							@* <input id="txtPassword" type="text" class="form-control" name="Password" placeholder="enter Password" value="@Model.Password">
							<span asp-validation-for="Password" class="text-danger"></span> *@
						</div>
						<div class="col-lg-4">
							@* <input id="txtPlanTypeId" type="text" class="form-control" name="PlanTypeId" placeholder="enter PlanTypeId" value="@Model.PlanTypeId">
							<span asp-validation-for="PlanTypeId" class="text-danger"></span> *@
							@Html.DropDownListFor(consumer => consumer.PlanTypeId,
																new SelectList(ViewBag.PlanType, "Id", "Name")
								, "--", new { @class = "form-control" })

						</div>
						<div class="col-lg-4">
							<input id="txtPhoneNumber" type="text" class="form-control" name="PhoneNumber" placeholder="enter PhoneNumber" value="@Model.PhoneNumber">
							<span asp-validation-for="PhoneNumber" class="text-danger"></span>
						</div>
					</div>
					<div class="row mt-3">
						<div class="col-lg-4">Website <span class="text-danger">*</span></div>
						<div class="col-lg-4">Description <span class="text-danger">*</span></div>
						<div class="col-lg-4"></div>
					</div>
					<div class="row">
						<div class="col-lg-4">
							<input id="txtWebsite" type="text" class="form-control" name="Website" placeholder="enter Website" value="@Model.Website">
							@* <span asp-validation-for="Website" class="text-danger"></span> *@
						</div>
						<div class="col-lg-4">
							<textarea id="txtDescription" class="form-control" name="Description" placeholder="enter Description">@Model.Description</textarea>
							@* <span asp-validation-for="Description" class="text-danger"></span> *@
						</div>
						<div class="col-lg-4">
						</div>
					</div>
					<div class="row mt-4 text-end ">
						<div class="col-lg-12 ">
							<button type="button" class="btn btn-sm btn-de-danger me-2" data-bs-dismiss="modal"><i class="mdi mdi-window-close me-2"></i>Close</button>
							<button type="button" class="btn btn-sm btn-de-primary" data-save="modal"><i class="mdi mdi-check-all me-2"></i>Update</button>
						</div>
					</div>
				</form>
			</div>
		</div>
<script type="text/javascript">
	$(window).on('load', function() {
	 $('#mdlConsumerShow').modal({backdrop: 'static', keyboard: false});
	});
	 $(".toggle-password").click(function() {
		$(this).toggleClass("fa-eye fa-eye-slash");
		input = $(this).parent().find("input");
		if (input.attr("type") == "password") {
			input.attr("type", "text");
		} else {
			input.attr("type", "password");
		}
	});
</script>