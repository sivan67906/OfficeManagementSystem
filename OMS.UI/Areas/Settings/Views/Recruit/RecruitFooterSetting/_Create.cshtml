@using OMS.UI.Areas.Settings.ViewModels
@model RecruitFooterSettingVM;
<style type="text/css">
	
</style>
<div class="modal-content">
	<div class="modal-header">
		<h5 class="modal-title mt-0" id="myNFSModalLabel">Footer Link Setup</h5>
		@* <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> *@
	</div>
	<div class="modal-body">
		<form>
			<div class="row mt-3 mb-2">
				<div class="col-lg-4">Title <span class="text-danger">*</span></div>
				<div class="col-lg-4">Slug <span class="text-danger">*</span></div>
				<div class="col-lg-4">Status</div>
			</div>
			<div class="row mt-3 mb-2">
				<div class="col-lg-4">
					<input id="txtRecruitFooterTitle" type="text" class="form-control" name="FooterTitle" placeholder="enter Footer Title" value="">
					<span asp-validation-for="FooterTitle" class="text-danger"></span>
					@* <input class="form-control" type="text" value="" id="reminderAftrMns"> *@
					</div>
				<div class="col-lg-4">
					<input id="txtRecruitFooterSlug" type="text" class="form-control" name="FooterSlug" placeholder="enter Footer Slug" value="">
					<span asp-validation-for="FooterSlug" class="text-danger"></span>
					@* <input class="form-control" type="text" value="" id="reminderAftrMns"> *@
					</div>
				<div class="col-lg-4">
					<select id="sltCheck" class="form-select" aria-label="">
						<option value="0" selected="" value="">--</option>
						<option value="1">Active</option>
						<option value="2">Inactive</option>
					</select>
				</div>
			</div>
			<div class="row mt-3">
				<div class="col-lg-12">Description</div>
			</div>
			<div class="row mb-2">
				<div class="col-lg-12">
					<div class="row">
						<div class="col-lg-12">
							<textarea id="txtFooterDescription" class="form-control" name="FooterDescription" placeholder="enter Footer Description"></textarea>
							<span asp-validation-for="FooterDescription" class="text-danger"></span>
							<textarea class="form-control" placeholder="" rows="5" id=""></textarea>
						</div>
					</div>
				</div>
			</div>
			<div class="row mt-4 text-end ">
				<div class="col-lg-12 ">
					<button type="button" class="btn btn-sm btn-de-danger me-2" data-bs-dismiss="modal"><i class="mdi mdi-window-close me-2"></i>Close</button>
					<button type="button" class="btn btn-sm btn-de-primary"><i class="mdi mdi-check-all me-2"></i>Create</button>
				</div>
			</div>
		</form>
	</div>
</div><!-- /.modal-content -->
