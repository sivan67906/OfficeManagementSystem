@using OMS.UI.Areas.Settings.ViewModels
@model RecruitVM
@section Styles {
	<link href="~/matrica/assets/libs/huebee/huebee.min.css" rel="stylesheet" type="text/css" />
	<link href="~/matrica/assets/css/app-custom.css" rel="stylesheet" type="text/css" />
}
<div class="row">
	<div class="col-12 col-lg-10 mx-auto">
		<div class="card">
			<div class="card-body">
				<!-- Nav tabs -->
				<ul class="nav nav-tabs" role="tablist">
					<li class="nav-item">
						<a class="nav-link active fw-semibold pt-0" data-bs-toggle="tab" href="#tbRecruitGeneralSetting" role="tab">General Settings</a>
					</li>
					<li class="nav-item">
						<a class="nav-link fw-semibold pt-0" data-bs-toggle="tab" href="#tbRecruitFooterSetting" role="tab">Footer Settings</a>
					</li>
					<li class="nav-item">
						<a class="nav-link fw-semibold pt-0" data-bs-toggle="tab" href="#tbRecruiterSetting" role="tab">Recruiter Settings</a>
					</li>
					<li class="nav-item">
						<a class="nav-link fw-semibold pt-0" data-bs-toggle="tab" href="#tbRecruitNotificationSetting" role="tab">Notification Settings</a>
					</li>
					<li class="nav-item">
						<a class="nav-link fw-semibold pt-0" data-bs-toggle="tab" href="#tbRecruitJobApplicationStatusSetting" role="tab">Job Application Status Settings</a>
					</li>
					<li class="nav-item">
						<a class="nav-link fw-semibold pt-0" data-bs-toggle="tab" href="#tbRecruitCustomQuestionSetting" role="tab">Custom Question Settings</a>
					</li>
				</ul>
			</div><!--end card-body-->
			<div class="card-body pt-0">
				<!-- Tab panes -->
				<div class="tab-content">
					<div class="tab-pane active show" id="tbRecruitGeneralSetting" role="tabpanel">
						@await Component.InvokeAsync("RecruitGeneralSetting", new { recruitGeneralSetting = Model.RecruitGeneralSettingVMList })
					</div>
					<div class="tab-pane" id="tbRecruitFooterSetting" role="tabpanel">
						@await Component.InvokeAsync("RecruitFooterSetting", new { recruitFooterSettings = Model.RecruitFooterSettingVMList })
					</div>
					<div class="tab-pane" id="tbRecruiterSetting" role="tabpanel">
						@await Component.InvokeAsync("RecruiterSetting", new { recruiterSettings = Model.RecruiterSettingVMList })
					</div>
					<div class="tab-pane show" id="tbRecruitNotificationSetting" role="tabpanel">
						@await Component.InvokeAsync("RecruitNotificationSetting", new { recruitNotificationSetting = Model.RecruitNotificationSettingVMList })
					</div>
					<div class="tab-pane" id="tbRecruitJobApplicationStatusSetting" role="tabpanel">
						@await Component.InvokeAsync("RecruitJobApplicationStatusSetting", new { recruitJobApplicationStatusSettings = Model.RecruitJobApplicationStatusSettingVMList })
					</div>
					<div class="tab-pane" id="tbRecruitCustomQuestionSetting" role="tabpanel">
						@await Component.InvokeAsync("RecruitCustomQuestionSetting", new { recruitCustomQuestionSettings = Model.RecruitCustomQuestionSettingVMList })
					</div>
				</div>
			</div><!--end card-body-->
		</div><!--end card-->
	</div>
</div>

