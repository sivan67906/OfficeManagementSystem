@model OMS.UI.Areas.Settings.ViewModels.PaymentVM;

<div class="modal-content">
    <div class="modal-header">
        <h6 class="modal-title m-0" id="ECurrencyLabel1">Edit Offline Payment Details</h6>
    </div>
    <div class="modal-body">
        <form action="Update">
            <input id="txtId" type="hidden" name="Id" value="@Model.Id" />
            <div class="row">
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="mb-3" for="OffPayMethod">Method</label>
                        <input type="text" class="form-control" value="@Model.Method" name="Method" id="PaymentName" required="">
                        <span asp-validation-for="Method" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <label class="mb-3">Description</label>
                    <textarea class="form-control" rows="5" name="Description" id="txtDescription">@Model.Description</textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
            </div><!--end row-->
            <div class="row mt-4 text-end ">
                <div class="col-lg-12 ">
                    <button type="button" class="btn btn-sm btn-de-danger me-2" data-bs-dismiss="modal"><i class="mdi mdi-window-close me-2"></i>Close</button>
                    <button type="button" class="btn btn-sm btn-de-primary" data-save="modal"><i class="mdi mdi-check-all me-2"></i>Update</button>
                </div>
            </div>
        </form>


    </div><!--end modal-body-->

</div><!--end modal-content-->



<script type="text/javascript">

</script>
