@model OMS.UI.Areas.Settings.ViewModels.PlanningVM;




<div class="modal-content">
    <div class="modal-header">
        <h6 class="modal-title m-0" id="ECurrencyLabel1">Edit Plan Details</h6>
    </div>
    <div class="modal-body">
        <form action="Update">
            <input id="txtId" type="hidden" name="Id" value="@Model.Id" />
            <div class="row">
                <div class="col-lg-4 g-2">
                    <div class="mb-3 text-start">
                        <label for="example-text-input">
                            Plan Name
                            <span class="f-14 mr-1 text-danger">*</span>
                        </label>

                        <input class="form-control mt-2" type="text" value="@Model.Name"name="Name" id="example-text-input">
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-lg-4 g-2">
                    <div class="mb-3 text-start">
                        <label for="example-text-input">
                            Plan Price
                            <span class="f-14 mr-1 text-danger">*</span>
                        </label>

                        <input class="form-control mt-2" type="number" value="@Model.PlanPrice" name="PlanPrice" id="example-text-input">
                        <span asp-validation-for="PlanPrice" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-lg-4 g-2">
                    <div class="mb-3 text-start">
                        <label for="example-text-input">
                            Validity(month)
                            <span class="f-14 mr-1 text-danger">*</span>
                        </label>

                        <input class="form-control mt-2" type="number" value="@Model.Validity" name="Validity" id="example-text-input">
                        <span asp-validation-for="Validity" class="text-danger"></span>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4 g-2">
                    <div class="mb-3 text-start">
                        <label for="example-text-input">
                            Employee(Max :50 Nos)
                            <span class="f-14 mr-1 text-danger">*</span>
                        </label>

                        <input class="form-control mt-2" type="number" value="@Model.Employee" name="Employee" id="example-text-input">
                        <span asp-validation-for="Employee" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-lg-4 g-2">
                    <div class="mb-3 text-start">
                        <label for="example-text-input">
                            Designation(Max :5 Nos)<span class="f-14 mr-1 text-danger">*</span>
                        </label>

                        <input class="form-control mt-2" type="number" value="@Model.Designation" name="Designation" id="example-text-input">
                        <span asp-validation-for="Designation" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-lg-4 g-2">
                    <div class="mb-3 text-start">
                        <label for="example-text-input">
                            Department(Max :5 Nos)
                            <span class="f-14 mr-1 text-danger">*</span>
                        </label>

                        <input class="form-control mt-2" type="number" value="@Model.Department" name="Department" id="example-text-input">
                        <span asp-validation-for="Department" class="text-danger"></span>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4 g-2">
                    <div class="mb-3 text-start">
                        <label for="example-text-input">
                            Company(Max :2 Nos)<span class="f-14 mr-1 text-danger">*</span>
                        </label>

                        <input class="form-control mt-2" type="number" value="@Model.Company"name="Company" id="example-text-input">
                        <span asp-validation-for="Company" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-lg-4 g-2">
                    <div class="mb-3 text-start">
                        <label for="example-text-input">
                            Roles(Max :15 Nos)
                            <span class="f-14 mr-1 text-danger">*</span>
                        </label>
                        <input class="form-control mt-2" type="number" value="@Model.Roles"name="Roles" id="example-text-input">
                        <span asp-validation-for="Roles" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-lg-4 g-2">
                    <div class="mb-3 text-start">
                        <label for="example-text-input">
                            Permission(Max :20 Nos) <span class="f-14 mr-1 text-danger">*</span>
                        </label>
                        <input class="form-control mt-2" type="number"name="Permission" value="@Model.Permission" id="example-text-input">
                        <span asp-validation-for="Permission" class="text-danger"></span>

                    </div>
                </div>
            </div>
            <div class="row">

                <div class="col-lg-12 g-2">
                    <div class="mb-3 text-start">
                        <label for="example-text-input">
                            Description
                        </label>

                        <textarea class="form-control mt-2" id="" name="Description" rows="5">@Model.Description</textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>

                    </div>
                </div>
            </div>
            <div class="row mt-4 text-end ">
                <div class="col-lg-12 ">
                    <button type="button" class="btn btn-sm btn-de-danger me-2" data-bs-dismiss="modal"><i class="mdi mdi-window-close me-2"></i>Close</button>
                    <button type="button" class="btn btn-sm btn-de-primary" data-save="modal"><i class="mdi mdi-check-all me-2"></i>Update</button>
                </div>
            </div>
        </form>


    </div><!--end modal-body-->

</div><!--end modal-content-->



<script type="text/javascript">

</script>
