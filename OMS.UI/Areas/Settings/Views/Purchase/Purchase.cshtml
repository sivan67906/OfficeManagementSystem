@model OMS.UI.Areas.Settings.ViewModels.PurchaseVM;


<div class="modal fade" id="mdlCurrenceyShow">
    <div class="modal-dialog modal-xl" id="PlaceHolderHere">
    </div>
</div>
<div class="row">
    <div class="col-12 col-lg-12">
        <div class="card">
            <form asp-action="Purchase" method="post">
