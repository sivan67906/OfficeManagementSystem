                                    </div>
                                    <div class="row mt-2">
                                        <input value="@Model.BillOrders.BillOrderNumberExample" type="text" placeholder="Bill Order Number Example" class="form-control font-spacing-bold" name="BillOrders.BillOrderNumberExample" id="txtBillOrderNoExample" disabled="disabled" />
                                        <span asp-validation-for="BillOrders.BillOrderNumberExample" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
