@using OMS.UI.Areas.Settings.ViewModels
@model ProjectCategoryVM;
<style type="text/css">

</style>
<div class="modal-content">
	<div class="modal-header">
		<h5 class="modal-title mt-0" id="">Project Category Setup</h5>
	</div>
	<div class="modal-body">
		<form action="CreateProjectCategory">
			<input id="txtId" type="hidden" name="Id" value="@Model.Id" />
			<div class="row mt-3">
				<div class="col-lg-7">Name <span class="text-danger">*</span></div>
				<div class="col-lg-5"><span class="text-danger">*</span></div>
			</div>
			<div class="row">
				<div class="col-lg-7">
					<input class="form-control" name="Name" type="text" value="" id="txtName">
				</div>
				<div class="col-lg-5">
				</div>
			</div>
			<div class="row mt-4 text-end ">
				<div class="col-lg-12 ">
					<button type="button" class="btn btn-sm btn-de-danger me-2" data-bs-dismiss="modal"><i class="mdi mdi-window-close me-2"></i>Close</button>
					<button type="button" class="btn btn-sm btn-de-primary" data-save="modal"><i class="mdi mdi-check-all me-2"></i>Create</button>
				</div>
			</div>
		</form>
	</div>
</div>
<script type="text/javascript">
	   $(window).on('load', function() {
	$('#mdlProjectCategoryShow').modal({backdrop: 'static', keyboard: false});
	   });
</script>
