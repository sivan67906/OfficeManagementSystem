@model OMS.UI.Areas.Settings.ViewModels.TaxVM


<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title mt-0" id="">Tax Setup</h5>
    </div>
    <div class="modal-body">
        <form action="Create">
            <div class="row">
                <div class="col-lg-12 g-2">
                    <div class="mb-3 text-start">
                        <label for="taxname">
                            Tax Name
                            <span class="f-14 mr-1 text-danger">*</span>
                        </label>

                        <input class="form-control mt-2" type="text"name="Name" value="" id="taxname">
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-lg-12 g-2">
                    <div class="mb-3 text-start">
                        <label for="rate">
                            Rate
                            <span class="f-14 mr-1 text-danger">*</span>
                        </label>

                        <input class="form-control mt-2" type="number"name="Rate" value="" id="rate">
                        <span asp-validation-for="Rate" class="text-danger"></span>

                    </div>
                </div>
            </div>

            <div class="row mt-4 text-end ">
                <div class="col-lg-12 ">
                    <button type="button" class="btn btn-sm btn-de-danger me-2" data-bs-dismiss="modal"><i class="mdi mdi-window-close me-2"></i>Close</button>
                    <button type="button" class="btn btn-sm btn-de-primary" data-save="modal"><i class="mdi mdi-check-all me-2"></i>Create</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">

</script>


