@model OMS.UI.Areas.Settings.ViewModels.TaxVM;

<div class="modal-content">
    <div class="modal-header">
        <h6 class="modal-title m-0" id="ECurrencyLabel1">Edit Tax Details</h6>
    </div>
    <div class="modal-body">
        <form action="Update">
            <input id="txtId" type="hidden" name="Id" value="@Model.Id" />

            <div class="row">
                <div class="col-md-6 g-2">
                    <div class="mb-3 text-start">
                        <label for="cname">
                            Tax Name
                            <span class="f-14 mr-1 text-danger">*</span>
                        </label>

                        <input class="form-control mt-2" type="text" placeholder="e.g. Doller" value="@Model.Name" name="Name" id="cname">
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-lg-6 g-2">
                    <div class="mb-3 text-start">
                        <label for="csymbol">
                            Rate
                            <span class="f-14 mr-1 text-danger">*</span>
                        </label>

                        <input class="form-control mt-2" type="text" placeholder="e.g. $" value="@Model.Rate" name="Rate" id="csymbol">
                        <span asp-validation-for="Rate" class="text-danger"></span>

                    </div>
                </div>
                
                
            </div>
            
            <div class="row mt-4 text-end ">
                <div class="col-lg-12 ">
                    <button type="button" class="btn btn-sm btn-de-danger me-2" data-bs-dismiss="modal"><i class="mdi mdi-window-close me-2"></i>Close</button>
                    <button type="button" class="btn btn-sm btn-de-primary" data-save="modal"><i class="mdi mdi-check-all me-2"></i>Update</button>
                </div>
            </div>
        </form>


    </div><!--end modal-body-->

</div><!--end modal-content-->



<script type="text/javascript">

</script>
