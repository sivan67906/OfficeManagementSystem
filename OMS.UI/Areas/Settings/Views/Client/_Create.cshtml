@model OMS.UI.Areas.Settings.ViewModels.ClientVM
<div class="modal fade" id="mdlProductShow">
	<div class="modal-dialog modal-xl">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title mt-0" id="">Lead Agent Setup</h5>
			</div>
			<div class="modal-body">
				<form action="Create">
					
                    <div class="row">
                        <div class="col-lg-4 g-2">
                            <div class="mb-3 text-start">
                                <label for="example-text-input">
                                    Client Code <span class="f-14 mr-1 text-danger">*</span>
                                </label>
                                <input class="form-control mt-2" type="text" value=""name="ClientCode" id="example-text-input">
                                <span asp-validation-for="ClientCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4 g-2">
                            <div class="mb-3 text-start">
                                <label for="example-text-input">
                                    Client Name
                                    <span class="f-14 mr-1 text-danger">*</span>
                                </label>
                                <input class="form-control mt-2" type="text" value=""name="ClientName" id="example-text-input">
                                <span asp-validation-for="ClientName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4 g-2">
                            <div class="mb-3 text-start">
                                <label for="example-text-input">
                                    Email <span class="f-14 mr-1 text-danger">*</span>
                                </label>
                                <input class="form-control mt-2" type="email" value=""name="Email" id="example-text-input">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-lg-6 g-2">
                            <div class="mb-3 text-start">
                                <label for="example-text-input">
                                    Company Name <span class="f-14 mr-1 text-danger">*</span>
                                </label>
                                <select class="form-select mt-2" aria-label="Default select example" name="CompanyName">
                                    <option value="" selected>--</option>
                                    <option value="1">Meta</option>
                                    <option value="2">Apple</option>
                                    <option value="3">Microsoft</option>
                                </select>
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 g-2">
                            <div class="mb-3 text-start">
                                <label for="example-text-input">
                                    Phone Number<span class="f-14 mr-1 text-danger">*</span>
                                </label>
                                <input class="form-control mt-2" type="tel" value=""name="PhoneNumber" id="example-text-input">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-lg-6 g-2">
                            <div class="mb-3 text-start">
                                <label for="address">
                                    Address 1
                                    <span class="f-14 mr-1 text-danger">*</span>
                                </label>

                                <textarea class="form-control mt-2"name="Address1" type="text" rows="1" placeholder="e.g.  132, My Street, Kingston, New York 12401" id="address"></textarea>
                                <span asp-validation-for="Address1" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-lg-6 g-2">
                            <div class="mb-3 text-start">
                                <label for="address">
                                    Address 2
                                    <span class="f-14 mr-1 text-danger">*</span>
                                </label>

                                <textarea class="form-control mt-2" name="Address2" type="text" rows="1" placeholder="e.g. Street, Floor, Block" id="address"></textarea>
                                <span asp-validation-for="Address2" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 g-2">
                            <div class="mb-3 text-start">
                                <label for="example-text-input">
                                    Country
                                </label>
                                <select id="countryDropdown" class="form-select mt-2" name="Country">
                                    <option selected>--</option>
                                    <option>USA</option>
                                    <option>Canada</option>
                                    <option>UK</option>
                                    <option>Australia</option>
                                </select>
                                <span asp-validation-for="Country"  class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-3 g-2">
                            <div class="mb-3 text-start">
                                <label for="tax">
                                    State
                                </label>
                                <select id="countryDropdown" class="form-select mt-2" name="State">
                                    <option selected>--</option>
                                    <option>California</option>
                                    <option>Texas</option>
                                    <option>Ontario</option>
                                    <option>Grater Landon</option>
                                </select>
                                <span asp-validation-for="State" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-3 g-2">
                            <div class="mb-3 text-start">
                                <label for="tax">
                                    City
                                </label>
                                <select id="countryDropdown"name="City" class="form-select mt-2">
                                    <option selected>--</option>
                                    <option>Los Angeles</option>
                                    <option>Austin</option>
                                    <option>Toranto</option>
                                    <option>London</option>
                                    <option>Sydney</option>
                                </select>
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-3 g-2">
                            <div class="mb-3 text-start">
                                <label for="tax">
                                    Zip Code
                                </label>
                                <input class="form-control mt-2" type="number" name="ZipCode" placeholder="" id="tax">
                                <span asp-validation-for="ZipCode" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 g-2">
                            <div class="mb-3 text-start">
                                <label for="example-text-input">
                                    Description
                                </label>
                                <textarea class="form-control mt-2" name="Description" id="" rows="5" placeholder=""></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>


                    <div class="row mt-4 text-end ">
						<div class="col-lg-12 ">
							<button type="button" class="btn btn-sm btn-de-danger me-2" data-bs-dismiss="modal"><i class="mdi mdi-window-close me-2"></i>Close</button>
							<button type="button" class="btn btn-sm btn-de-primary" data-save="modal"><i class="mdi mdi-check-all me-2"></i>Create</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	<script type="text/javascript">
		$(window).on('load', function() {
		 $('#mdlProductShow').modal({backdrop: 'static', keyboard: false});
		});
	</script>
}