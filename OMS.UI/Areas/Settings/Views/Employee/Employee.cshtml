 @model IEnumerable<OMS.UI.Areas.Settings.ViewModels.EmployeeVM>;
<div class="modal fade" id="mdlProductShow">
    <div class="modal-dialog modal-xl" id="PlaceHolderHere">
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <h4 class="card-title">Employee Index</h4>
