@using OMS.UI.Areas.Settings.ViewModels
@model ProjectStatusVM;

<style type="text/css">
	
</style>
<div class="modal-content">
	<div class="modal-header">
		<h5 class="modal-title mt-0" id="">Project Status Setup</h5>
	</div>
	<div class="modal-body">
		<form action="UpdateProjectStatus" id="UpdateProjectStatus">
			<input id="txtId" type="hidden" name="Id" value="@Model.Id" />
			<div class="row mt-3">
				<div class="col-lg-7">Name <span class="text-danger">*</span></div>
				<div class="col-lg-3">Label Color <span class="text-danger">*</span></div>
				<div class="col-lg-2"></div>
			</div>
			<div class="row">
				<div class="col-lg-7">
					<input class="form-control" name="Name" type="text" value="@Model.Name" id="txtName">
				</div>
				<div class="col-lg-3">
					<input style="width:100%;" type="color" name="ColorCode" class="form-control form-control-color" id="txtColorCode" value="@Model.ColorCode" title="Choose your color">
					<span asp-validation-for="ColorCode" class="text-danger"></span>
				</div>
				<div class="col-lg-2">
				</div>
			</div>
			<div class="row mt-3">
				<div class="col-lg-7">IsDefault <span class="text-danger">*</span></div>
				<div class="col-lg-3">Status <span class="text-danger">*</span></div>
				<div class="col-lg-2"></div>
			</div>
			<div class="row mt-3">
				<div class="col-lg-7">
					<div class="form-check form-switch form-switch-success">
						<input class="form-check-input" name="IsDefaultStatus" type="checkbox" id="ipIsDefaultStatus" @(Model.IsDefaultStatus ? "checked" : "") style="width: 4em !important; height: 2em !important;">
						<span asp-validation-for="IsDefaultStatus" class="text-danger"></span>
					</div>
				</div>
				<div class="col-lg-3">
					<div class="form-check form-switch form-switch-success">
						<input class="form-check-input" name="Status" type="checkbox" id="ipStatus" @(Model.Status ? "checked" : "") style="width: 4em !important; height: 2em !important;">
						<span asp-validation-for="Status" class="text-danger"></span>
					</div>
				</div>
				<div class="col-lg-2"></div>
			</div>
			<div class="row mt-4 text-end ">
				<div class="col-lg-12 ">
					<button type="button" class="btn btn-sm btn-de-danger me-2" data-bs-dismiss="modal"><i class="mdi mdi-window-close me-2"></i>Close</button>
					<button type="button" onclick="" id="btnUpdateProjectStatus" data-save="modals" class="btn btn-sm btn-de-primary"><i class="mdi mdi-check-all me-2"></i>Update</button>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	<script type="text/javascript">
		$(window).on('load', function() {
		 $('#mdlProjectStatusShow').modal({backdrop: 'static', keyboard: false});
		});
		
	</script>
}