@model OMS.UI.Areas.Settings.ViewModels.CurrencyVM;



       
<div class="modal-content">
                    <div class="modal-header">
                        <h6 class="modal-title m-0" id="ECurrencyLabel1">Edit Currency Details</h6>
                    </div>
                    <div class="modal-body">
                        <form action="Update">
                            <input id="txtId" type="hidden" name="Id" value="@Model.Id" />

                            <div class="row">
                                <div class="col-md-4 g-2">
                                    <div class="mb-3 text-start">
                                        <label for="cname">
                                            Currency Name
                                            <span class="f-14 mr-1 text-danger">*</span>
                                        </label>

                                        <input class="form-control mt-2" type="text" placeholder="e.g. Doller" value="@Model.CurrencyName" name="CurrencyName" id="cname">
                                        <span asp-validation-for="CurrencyName" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-lg-4 g-2">
                                    <div class="mb-3 text-start">
                                        <label for="csymbol">
                                            Currency Symbol
                                            <span class="f-14 mr-1 text-danger">*</span>
                                        </label>

                                        <input class="form-control mt-2" type="text" placeholder="e.g. $" value="@Model.CurrencySymbol" name="CurrencySymbol" id="csymbol">
                                        <span asp-validation-for="CurrencySymbol" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-lg-4 g-2">
                                    <div class="mb-3 text-start">
                                        <label for="ccode">
                                            Currency Code
                                            <span class="f-14 mr-1 text-danger">*</span>
                                        </label>

                                        <input class="form-control mt-2" type="text" placeholder="e.g. USD" value="CurrencyCode" name="CurrencyCode" id="ccode">
                                        <span asp-validation-for="CurrencyCode" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>
                            <div class="row">

                                <div class="col-lg-6 g-2">
                                    <div class="mb-3 text-start">
                                        <label for="tax">
                                            Is Cryptocurrency
                                        </label>
                                        <div class="col-sm-7 text-start mt-2">
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="IsCryptocurrency" id="icc1" value="@Model.IsCryptocurrency">
                                                <span asp-validation-for="IsCryptocurrency" class="text-danger"></span>

                                                <label class="form-check-label" for="icc1">Yes</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="IsCryptocurrency" id="icc2" value="@Model.IsCryptocurrency" default>
                                                <span asp-validation-for="IsCryptocurrency" class="text-danger"></span>

                                                <label class="form-check-label" for="icc2">No</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 g-2" id="yestextbox" style="display: none;">
                                    <div class="mb-3 text-start">
                                        <label for="usdprice">
                                            USD Price
                                            <span class="f-14 mr-1 text-danger">*</span>
                                        </label>

                                        <input class="form-control mt-2" type="text" placeholder="e.g.100000" value="@Model.USDPrice" name="USDPrice" id="usdprice">
                                        <span asp-validation-for="USDPrice" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-lg-6 g-2" id="notextbox">
                                    <div class="mb-3 text-start">
                                        <label for="exchangerate">
                                            Exchange Rate
                                            <span class="f-14 mr-1 text-danger">*</span>
                                        </label>

                                        <input class="form-control mt-2" type="text" placeholder="e.g.10000" value="@Model.ExchangeRate" name="ExchangeRate" id="exchangerate">
                                        <span asp-validation-for="ExchangeRate" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-12 text-start">
                                    <h6>Currency Format Settings</h6>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6 g-2">
                                    <div class="mb-3 text-start">
                                        <label for="cposition">
                                            Currency Position

                                        </label>

                                        <select class="form-select mt-2" id="cposition" name="CurrencyPosition" value="@Model.CurrencyPosition" aria-label="Default select example">

                                            <option value="" selected>--</option>
                                            <option value="1">Left</option>
                                            <option value="2">Right</option>
                                            <option value="3">Left with Space</option>
                                            <option value="4">Right with Space</option>
                                        </select>
                                        <span asp-validation-for="CurrencyPosition" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-lg-6 g-2">
                                    <div class="mb-3 text-start">
                                        <label for="sep">
                                            Thousand Separator

                                        </label>

                                        <input class="form-control mt-2" type="text" placeholder="" value="@Model.ThousandSeparator" name="ThousandSeparator" id="sep">
                                        <span asp-validation-for="ThousandSeparator" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6 g-2">
                                    <div class="mb-3 text-start">
                                        <label for="dsep">
                                            Decimal Separator

                                        </label>

                                        <input class="form-control mt-2" type="text" placeholder="" value="@Model.DecimalSeparator" name="DecimalSeparator" id="dsep">
                                        <span asp-validation-for="DecimalSeparator" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-lg-6 g-2">
                                    <div class="mb-3 text-start">
                                        <label for="ndecimal">
                                            Number of Decimals
                                        </label>

                                        <input class="form-control mt-2" type="text" placeholder="" value="@Model.NumberofDecimals" name="NumberofDecimals" id="ndecimal">
                                        <span asp-validation-for="NumberofDecimals" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>
                                



                            <div class="row mt-4 text-end ">
                                <div class="col-lg-12 ">
                                    <button type="button" class="btn btn-sm btn-de-danger me-2" data-bs-dismiss="modal"><i class="mdi mdi-window-close me-2"></i>Close</button>
                                    <button type="button" class="btn btn-sm btn-de-primary" data-save="modal"><i class="mdi mdi-check-all me-2"></i>Update</button>
                                </div>
                            </div>
                        </form>
                        

                    </div><!--end modal-body-->
                    
                </div><!--end modal-content-->
            
  

    <script type="text/javascript">
       
    </script>
