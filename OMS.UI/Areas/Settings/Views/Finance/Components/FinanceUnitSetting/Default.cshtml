@using OMS.UI.Areas.Settings.ViewModels
@model List<FinanceUnitSettingVM>

<div class="modal fade" id="mdlFinanceUnitSettingShow" style="">
	<div class="modal-dialog" id="PlaceHolderHere">
	</div>
</div>

<div class="card">
	<div class="card-header">
		<div class="row align-items-center">
			<div class="col">
				<h4 class="card-title">Unit Index</h4>
			</div><!--end col-->
			<div class="col-auto">
				<button type="button" class="btn btn-de-primary" data-toggle="ajax-modal"
						data-target="#mdlFinanceUnitSettingShow" data-url="@Url.Action("Create")">
					<i class="fas fa-plus me-2"></i>Add Unit
				</button>
			</div><!--end col-->
		</div>  <!--end row-->
	</div><!--end card-header-->
	<div class="card-body">
		<div class="table-responsive">
			<table class="table mb-0">
				<thead class="thead-light">
					<tr>
						<th>#</th>
						<th>Units</th>
						<th>IsDefault</th>
						<th>Action</th>
					</tr><!--end tr-->
				</thead>

				<tbody>
					@for (var i = 0; i < Model.Count(); i++)
							{
								<tr>
							<td>@(i + 1)</td>
							<td>@Model[i].FUnitName</td>
							<td>(@Model[i].FIsDefault) ? "Yes" : "No"</td>
						<td>
						@* 	<a  data-toggle="tooltip" data-placement="top"
							   data-bs-toggle="modal"
							   data-animation="bounce" data-bs-target=".bs-addEditUnit-modal-lg"
							   title="Edit"><i class="las la-pen text-secondary font-16"></i></a> *@

								<button type="button" class="custombuttonaslink" data-toggle="ajax-modal"
										data-bs-target="#mdlFinanceUnitSettingShow" data-url="@Url.Action($"Edit/{@Model[i].Id}")">
									<i class="las la-pen text-secondary font-16"></i>
								</button>
						</td>
					</tr><!--end tr-->
							}
				</tbody>
			</table>
		</div>
	</div><!--end card-body-->



</div>