@using ConfigurationServices.CQRS.MVC.Areas.Settings.Models
@model IEnumerable<LeadStatusVM>
<div id="PlaceHolderHere"></div>

<div class="row">
    <div class="col-12 col-lg-12">

        <div class="card" style="">

            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h4 class="card-title">LeadStatus Index</h4>
                    </div><!--end col-->
                    <div class="col-auto">
                        <button type="button" class="btn btn-de-primary" data-toggle="ajax-modal"
                                data-target="#mdlProductShow" data-url="@Url.Action("Create")">
                            <i class="fas fa-plus me-2"></i>Add LeadStatus
                        </button>
                    </div><!--end col-->
                </div>  <!--end row-->
            </div><!--end card-header-->

            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-lg-12">
                        <div class="input-group">
                            <input type="text" name="searchQuery" class="form-control" placeholder="Search by name..." value="@ViewData["searchQuery"]" />
                            <button type="submit" class="btn btn-primary">Search</button>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead class="thead-light">
                                <tr>
                                    <th class="d-none">@Html.DisplayNameFor(m => m.Id)</th>
                                    <th>Source</th>
                                    <th>Color</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td class="d-none">@Html.DisplayFor(modelItem => item.Id)</td>
                                        <td>@item.Status</td>
                                        <td>@item.Color</td>
                                        <td>
                                            <button type="button" class="btn btn-de-primary" data-toggle="ajax-modal"
                                                    data-target="#mdlProductShow" data-url="@Url.Action($"Edit/{item.Id}")">
                                                <i class="las la-pen text-secondary font-16"></i>
                                            </button>
                                            <button type="button" class="btn btn-de-primary" data-toggle="ajax-modal"
                                                    data-target="#mdlProductShow" data-url="@Url.Action($"Delete/{item.Id}")">
                                                <i class="las la-trash-alt text-secondary font-16"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script src="~/matrica/assets/js/pages/app-custom.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(window).on('load', function() {
         $('#mdlProductShow').modal({backdrop: 'static', keyboard: false});
        });
    </script>
}