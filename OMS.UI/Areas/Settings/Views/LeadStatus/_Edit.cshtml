@using ConfigurationServices.CQRS.MVC.Areas.Settings.Models
@model LeadStatusVM

<div class="modal fade" id="mdlProductShow">
	<div class="modal-dialog modal-xl">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title mt-0" id="">Edit Product Details</h5>
			</div>
			<div class="modal-body">
				<form action="Update">
					<input id="txtId" type="hidden" name="Id" value="@Model.Id" />
					<div class="row mt-3">
						<div class="col-lg-4">Status <span class="text-danger">*</span></div>
					</div>
					<div class="row">
						<div class="col-lg-4">
							<input id="txtName" type="text" class="form-control" name="Status" placeholder="enter Name" value="@Model.Status">
							<span asp-validation-for="Status" class="text-danger"></span>
						</div>

					</div>
					<div class="row mt-3">
						<div class="col-lg-4">Source <span class="text-danger">*</span></div>
					</div>
					<div class="row">
						<div class="col-lg-4">
							<input type="color" class="form-control form-control-color" id="exampleColorInput" name="Color" value="@Model.Color" title="Choose your color">
							<span asp-validation-for="Color" class="text-danger"></span>
						</div>

					</div>



					<div class="row mt-4 text-end ">
						<div class="col-lg-12 ">
							<button type="button" class="btn btn-sm btn-de-danger me-2" data-bs-dismiss="modal"><i class="mdi mdi-window-close me-2"></i>Close</button>
							<button type="button" class="btn btn-sm btn-de-primary" data-save="modal"><i class="mdi mdi-check-all me-2"></i>Update</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	<script type="text/javascript">
		$(window).on('load', function() {
		 $('#mdlProductShow').modal({backdrop: 'static', keyboard: false});
		});
	</script>
}